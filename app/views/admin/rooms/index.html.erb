<% provide :title, t(".provide_title") %>
<div class="card room-list">
  <div class="card-header border-transparent">
    <h3 class="card-title"><%= t ".title" %></h3>

    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table m-0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".price" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".description" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each_with_index do |room, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to room.name, edit_admin_room_path(room) %></td>
              <td><%= room.price %></td>
              <td><%= room.status %></td>
              <td>
                <div class="sparkbar"><%= room.description %></div>
              </td>
              <td><%= link_to t(".delete"), [:admin, room], method: :delete,
                                          data: { confirm: ".confirm" },
                                          remote: :true,
                                          class: "destroy-room" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer clearfix">
    <%= link_to t(".create_btn"), new_admin_room_path, class: "btn btn-sm btn-info float-left" %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
