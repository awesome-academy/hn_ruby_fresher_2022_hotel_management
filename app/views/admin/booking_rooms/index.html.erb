<% provide :title, t(".provide_title") %>
<div class="card room-list">
  <div class="card-header border-transparent">
    <h3 class="card-title"><%= t ".title" %></h3>

    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
    </div>
  </div>
  <!-- /.card-header -->
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table m-0">
        <thead>
          <tr>
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".from_date" %></th>
            <th><%= t ".to_date" %></th>
            <th><%= t ".status" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @booking_rooms.each_with_index do |booking_room, index| %>
            <tr>
                <td><%= index + 1 %> </td>
              <td><%=  booking_room.name %> </td>
              <td><%=  booking_room.description %> </td>
              <td><%=  booking_room.from_date %> </td>
              <td><%=  booking_room.to_date %> </span></td>
              <%= form_for booking_room, method: :put, :remote => true do |f| %>
                <td><%= f.select :status, options_for_select(BookingRoom.statuses.map { |key, value| [key.capitalize, value] }, booking_room.status), onchange: "this.form.submit();" %>
                  <%= f.submit 'save', class: "hidden" %>
                  <td>
              <% end %>
              <td><%= link_to t(".btn_title"), [:admin, booking_room], method: :delete,
                                          data: { confirm: t(".confirm_message") } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer clearfix">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
